<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">

  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <%= link_to root_path do %>
        <%= image_tag 'icon.png', alt: 'CampHelp icon', class: 'mx-auto h-8 w-auto' %>
        <% end %>
    <h2 class="mt-4 text-center text-2xl/9 font-bold tracking-tight text-gray-900">Get started today</h2>
  </div>

<div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
<%= form_with model: @user, url: sign_up_path, class: "space-y-6" do |form| %>
  <% if form.object.errors.any? %>
    <div>Error: <%= form.object.errors.full_messages.first %></div>
  <% end %>


  <div>
    <label for="email" class="block text-sm/6 font-medium text-gray-900">Email address</label>
    <div class="mt-2">
        <%= form.email_field :email_address, required: true, autocomplete: "email", class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-sky-600 sm:text-sm/6" %>
    </div>
  </div>
  <div>
    <label for="password" class="block text-sm/6 font-medium text-gray-900">Password</label>
    <div class="mt-2">
        <%= form.password_field :password, required: true, autocomplete: "new-password", class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-sky-600 sm:text-sm/6" %>
    </div>
  </div>

  <div>
    <%= form.submit "Sign up", class: "flex w-full justify-center rounded-md bg-sky-600 px-3 py-1.5 text-sm/6 font-semibold text-white shadow-sm hover:bg-sky-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-sky-600" %>
  </div>
<% end %>
<p class="mt-10 text-center text-sm/6 text-gray-500">
  Already got an account?
    <%= link_to "Sign in", new_session_path, class: "font-semibold text-sky-600 hover:text-sky-500" %>
 </p>
</div>
</div>
