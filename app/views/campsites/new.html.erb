<%= form_with(model: @campsite, local: true, class: "space-y-6 max-w-2xl mx-auto py-24") do |form| %>
    <div class="border-b border-gray-900/10 pb-12 dark:border-white/10">
      <h1 class="text-xl font-semibold text-gray-900 dark:text-white">Create campsite</h1>
      <p class="mt-1 text-sm/6 text-gray-600 dark:text-gray-400">Set up your campsite profile to get started with CampHelp.</p>


        <% if @campsite.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-md p-4">
            <div class="flex">
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  <%= pluralize(@campsite.errors.count, "error") %> prohibited this campsite from being saved:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc pl-5 space-y-1">
                    <% @campsite.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

      <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">

        <div class="col-span-full">
            <%= form.label :name, class: "block text-sm/6 font-medium text-gray-900 dark:text-white" %>
            <div class="mt-2">
                <%= form.text_field :name, class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-sky-600 sm:text-sm/6 dark:bg-white/5 dark:text-white dark:outline-white/10 dark:placeholder:text-gray-500 dark:focus:outline-sky-500" %>
            </div>
        </div>

        <div class="col-span-full">
          <%= form.label :about, "About", class: "block text-sm/6 font-medium text-gray-900 dark:text-white" %>
          <div class="mt-2">
            <%= form.text_area :about, rows: 3, class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-sky-600 sm:text-sm/6 dark:bg-white/5 dark:text-white dark:outline-white/10 dark:placeholder:text-gray-500 dark:focus:outline-sky-500" %>
          </div>
        </div>

        <div class="sm:col-span-3">
            <%= form.label :open_from, "Opens From", class: "block text-sm/6 font-medium text-gray-900 dark:text-white" %>
            <div class="mt-2">
                <%= form.text_field :open_from, class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-sky-600 sm:text-sm/6 dark:bg-white/5 dark:text-white dark:outline-white/10 dark:placeholder:text-gray-500 dark:focus:outline-sky-500", placeholder: "June 1st" %>
            </div>
        </div>

        <div class="sm:col-span-3">
          <%= form.label :closed_from, "Closed from", class: "block text-sm/6 font-medium text-gray-900 dark:text-white" %>
          <div class="mt-2">
              <%= form.text_field :closed_from, class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-sky-600 sm:text-sm/6 dark:bg-white/5 dark:text-white dark:outline-white/10 dark:placeholder:text-gray-500 dark:focus:outline-sky-500", placeholder: "August 31st" %>
          </div>
        </div>

        <div class="col-span-full">
            <%= form.label :primary_colour, "Primary Color", class: "block text-sm/6 font-medium text-gray-900 dark:text-white" %>
            <div class="mt-2">
                <%= form.text_field :primary_colour, value: @campsite.primary_colour || "#3B82F6", class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-sky-600 sm:text-sm/6 dark:bg-white/5 dark:text-white dark:outline-white/10 dark:placeholder:text-gray-500 dark:focus:outline-sky-500" %>
            </div>
        </div>

        <div class="col-span-full">
            <%= form.label :website, "Website", class: "block text-sm/6 font-medium text-gray-900 dark:text-white" %>
            <div class="mt-2">
                <%= form.url_field :website, class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-sky-600 sm:text-sm/6 dark:bg-white/5 dark:text-white dark:outline-white/10 dark:placeholder:text-gray-500 dark:focus:outline-sky-500" %>
            </div>
        </div>

        <div class="sm:col-span-3">
            <%= form.label :contact_email, "Contact Email", class: "block text-sm/6 font-medium text-gray-900 dark:text-white" %>
            <div class="mt-2">
                <%= form.email_field :contact_email, class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-sky-600 sm:text-sm/6 dark:bg-white/5 dark:text-white dark:outline-white/10 dark:placeholder:text-gray-500 dark:focus:outline-sky-500" %>
            </div>
        </div>

        <div class="sm:col-span-3">
          <%= form.label :contact_number, "Contact Number", class: "block text-sm/6 font-medium text-gray-900 dark:text-white" %>
          <div class="mt-2">
              <%= form.text_field :contact_number, class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-sky-600 sm:text-sm/6 dark:bg-white/5 dark:text-white dark:outline-white/10 dark:placeholder:text-gray-500 dark:focus:outline-sky-500" %>
          </div>
        </div>

      </div>
    </div>

  <div class="mt-6 flex items-center justify-end gap-x-6">
    <%= link_to "Cancel", root_path, class: "text-sm/6 font-semibold text-gray-900 dark:text-white" %>
    <%= form.submit "Create", class: "rounded-md bg-sky-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-sky-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-sky-600 dark:bg-sky-500 dark:shadow-none dark:focus-visible:outline-sky-500" %>
  </div>
<% end %>
