<header class="w-full py-8 bg-gray-50">
  <div class="mx-auto max-w-3xl lg:px-8">
    <div class="flex justify-between items-center">
      <nav aria-label="Breadcrumb" class="flex">
        <ol role="list" class="flex items-center space-x-4">
          <li>
            <div>
              <%= link_to root_path,
                  class: "text-gray-400 hover:text-gray-500 dark:text-gray-400 dark:hover:text-gray-300" do %>
                <svg viewBox="0 0 20 20" fill="currentColor" data-slot="icon" aria-hidden="true" class="size-5 shrink-0">
                  <path d="M9.293 2.293a1 1 0 0 1 1.414 0l7 7A1 1 0 0 1 17 11h-1v6a1 1 0 0 1-1 1h-2a1 1 0 0 1-1-1v-3a1 1 0 0 0-1-1H9a1 1 0 0 0-1 1v3a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1v-6H3a1 1 0 0 1-.707-1.707l7-7Z" clip-rule="evenodd" fill-rule="evenodd"></path>
                </svg>
                <span class="sr-only">Home</span>
              <% end %>
            </div>
          </li>
        </ol>
      </nav>

      <div class="flex items-center">
        <%= form_with url: session_path, method: :delete, local: true, id: "logout-form", class: "hidden" do |form| %>
        <% end %>

        <div class="relative inline-block">
          <button type="button" class="flex items-center rounded-md bg-white py-1.5 px-3 text-sm text-gray-900 outline-1 -outline-offset-1 outline-gray-300 focus-visible:outline-2 focus-visible:-outline-offset-2 focus-visible:outline-indigo-600 hover:bg-gray-50" onclick="toggleAccountDropdown()">
            <%= Current.user.email_address %>
            <svg class="ml-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>

          <div id="account-dropdown" class="hidden absolute right-0 mt-2 w-full origin-top-right rounded-md bg-white p-0 py-1 text-base shadow-lg outline-1 outline-black/5 border border-gray-200 focus:outline-none z-50">
            <div class="py-1">
              <a href="/account" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 hover:text-gray-900">
                <svg class="w-4 h-4 mr-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
                Account
              </a>
              <a href="/billing" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 hover:text-gray-900">
                <svg class="w-4 h-4 mr-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
                </svg>
                Billing
              </a>
            </div>

            <div class="border-t border-gray-100 py-1">
              <button onclick="document.getElementById('logout-form').submit();" class="flex items-center w-full px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 hover:text-gray-900 text-left bg-transparent border-none cursor-pointer">
                <svg class="w-4 h-4 mr-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013 3v1"></path>
                </svg>
                Log out
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<div class="mx-auto max-w-3xl py-8 px-4 sm:px-6 lg:px-8">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-xl font-semibold text-gray-900">Your Campsites</h1>
      <p class="mt-2 text-sm text-gray-700">Select a campsite to manage</p>
    </div>
    <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
      <%= link_to new_campsite_path, class: "block rounded-md bg-indigo-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-indigo-500" do %>
        Add campsite
      <% end %>
    </div>
  </div>

  <div class="mt-8">


    <ul role="list" class="divide-y divide-gray-100 dark:divide-white/5">
      <% @campsites.each do |campsite| %>
        <li class="flex items-center justify-between gap-x-6 py-5">
          <div class="min-w-0">
            <div class="flex items-start gap-x-3">
              <p class="text-base font-semibold text-gray-900 dark:text-white"><%= campsite.name %></p>
            </div>
            <div class="mt-1 flex items-center gap-x-2 text-xs/5 text-gray-500 dark:text-gray-400">
              <p class="whitespace-nowrap">Created <%= campsite.created_at %></p>
              <svg viewBox="0 0 2 2" class="size-0.5 fill-current">
                <circle r="1" cx="1" cy="1"></circle>
              </svg>
              <p class="truncate"><%= campsite.owner == Current.user ? "Owner" : "Member" %></p>
            </div>
          </div>
          <div class="flex flex-none items-center gap-x-4">
            <%= link_to campsite_path(campsite.slug), class: "hidden rounded-md bg-white px-2.5 py-1.5 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:block dark:bg-white/10 dark:text-white dark:shadow-none dark:ring-white/5 dark:hover:bg-white/20" do %>
              View campsite <span class="sr-only">, <%= campsite.name %></span>
            <% end %>

            <div class="relative inline-block">
              <!-- Hidden checkbox for CSS-only dropdown -->
              <input type="checkbox" id="dropdown-<%= campsite.id %>" class="sr-only peer">

              <!-- Dropdown trigger -->
              <label for="dropdown-<%= campsite.id %>" class="flex items-center rounded-full p-1 text-gray-400 hover:text-gray-600 focus:outline-none cursor-pointer dark:text-gray-500 dark:hover:text-gray-300">
                <span class="sr-only">Open options</span>
                <svg viewBox="0 0 20 20" fill="currentColor" data-slot="icon" aria-hidden="true" class="size-5">
                  <path d="M10 3a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM10 8.5a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM11.5 15.5a1.5 1.5 0 1 0-3 0 1.5 1.5 0 0 0 3 0Z"></path>
                </svg>
              </label>

              <!-- Dropdown menu -->
              <div class="absolute left-0 z-10 mt-2 origin-top-right rounded-md bg-white py-1 shadow-lg opacity-0 scale-95 transform transition-all duration-100 ease-out pointer-events-none outline-1 outline-black/5 border border-gray-200 focus:outline-none peer-checked:opacity-100 peer-checked:scale-100 peer-checked:pointer-events-auto dark:bg-gray-800 dark:ring-white/20">
                <a href="<%= settings_campsite_path(campsite.slug) %>" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 dark:text-gray-300 dark:hover:bg-gray-700">
                  <div class="flex items-center">
                    Settings
                  </div>
                </a>
              </div>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
